{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    },
    /* Basic Options */
    "target": "es6",
    "module": "esnext",
    "lib": ["dom", "es6"],
    "declaration": false,
    "sourceMap": true,
    "jsx": "react",
    "removeComments": true,
    "importHelpers": false,

    /* Strict Type-Checking Options */
    "noImplicitAny": true,

    /* Module Resolution Options */
    "moduleResolution": "node"
  },
  "files": ["src/index.tsx"],
  "include": ["node_modules"]
}
