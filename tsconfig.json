{
  "compilerOptions": {
    "baseUrl": "./src/",
    "outDir": "./dist/",
    "declaration": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "lib": ["es2015", "dom"]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
